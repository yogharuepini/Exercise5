#include <iostream>
using namespace std;

int main()
{
	int choice;

	do
	{
		cout << "\nThis is the Gym menu. \n";
		cout << "1. Adult Gym \n";
		cout << "2. Kids Gym \n";
		cout << "3. Senior Citizen Gym \n";
		cout << "4. Exit the menu. \n";
		cout << "Please enter your choice for this menu: \n";
		cin >> choice;

		switch (choice)
		{
		case 1: cout << "Adult Gym Price is RM50. \n";
			break;
		case 2: cout << "Kids Gym Price is RM20. \n";
			break;
		case 3: cout << "Senior Cetizen Gym is Free. \n";
			break;
		case 4: cout << "Exit the menu\n";

		default: cout << "Please enter number between 1-3.\n";
		}

	} while (choice != 4);

	cout << "Thank you for using our Gym Services.\n";
    return 0;
}
