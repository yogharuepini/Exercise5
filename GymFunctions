#include <iostream>
using namespace std;

void display() 
{
	cout << "Enter any from the menu below:\n1.Adult Gym\n2.Kids Gym\n3.Senior Citizen Gym\n";
}

int main()
{
	int no;
	display();
	cin >> no;
	do 
	{
		switch (no)
		{

		case 1: cout << "Adult Gym \n";
			break;
		case 2: cout << "Kids Gym \n";
			break;
		case 3: cout << "Senior Cetizen Gym \n";
			break;
		case 4: cout << "Exit the menu\n";

		default: cout << "Please enter number between 1-3.\n";

		}
	} 
	while (no == 0);
	return 0;
}
